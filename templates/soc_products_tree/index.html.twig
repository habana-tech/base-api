{% trans_default_domain easyadmin_config('translation_domain') %}
{% extends easyadmin_config('design.templates.layout') %}

{% block body_class 'page-blank' %}

{% block content %}
    <div class="content">
        <section class="content-header ">
            <div class="d-flex flex-row justify-content-between align-content-center w-100">
                <div class="content-header-title">
                    <h1 class="title">    Products</h1>
                </div>

                <div class="global-actions">
                    <div class="form-action form-action-search  action-search">
                        <form method="get" action="/admin/">
                            <input type="hidden" name="action" value="search">
                            <input type="hidden" name="entity" value="SocProducts">
                            <input type="hidden" name="menuIndex" value="3">
                            <input type="hidden" name="submenuIndex" value="-1">
                            <div class="form-group">
                                <div class="form-widget">
                                    <input class="form-control" type="search" name="query" value="" placeholder="Search">
                                </div>
                            </div>
                        </form>
                    </div>


                    <div class="button-action">
                        <a class="btn btn-primary action-new" href="/admin/?entity=Users&amp;action=new&amp;menuIndex=3&amp;submenuIndex=-1&amp;sortField=id&amp;sortDirection=DESC&amp;page=1&amp;referer=%252Fadmin%252F%253Fentity%253DUsers%2526action%253Dlist%2526menuIndex%253D3%2526submenuIndex%253D-1%2526sortField%253Did%2526sortDirection%253DDESC%2526page%253D1" target="_self">
                            Add Product
                        </a>
                    </div>
                </div>
            </div>



        </section>

        <section id="main" class="content-body">

            <table class="table datagrid">
                <thead>
                <tr>


                    <th class="  toggle ">
                        <a href="#">
                            Enabled
                        </a>
                    </th>

                    <th class="  string ">
                        <a href="#">
                            Reference </i>
                        </a>
                    </th>

                    <th class="  string ">
                        <a href="#">
                            Parent <i class="fa fa-fw fa-sort"></i>
                        </a>
                    </th>

                    <th class="  string ">
                        <a href="#">
                            Image <i class="fa fa-fw fa-sort"></i>
                        </a>
                    </th>


                    <th class="  string ">
                        <a href="#">
                            PDF File <i class="fa fa-fw fa-sort"></i>
                        </a>
                    </th>



                    <th>
                        <span class="sr-only">Actions</span>
                    </th>
                </tr>
                </thead>

                <tbody>

                {% for product in products %}
                    <tr data-id="{{product.id}}">


                    <td class=" toggle ">

                        <div class="checkbox-switch" data-propertyname="enabled">
                            <label>
                                <input type="checkbox" {% if product.enabled %}checked=""{% endif %}>
                                <span></span>
                            </label>
                        </div>

                    </td>

                    <td class=" string ">
                        <span title="{{ product.referenceName}}">{{ product.referenceName}}</span>

                    </td>

                    <td class=" string ">
                        <span title="{{ product.parent}}">{{ product.parent}}</span>

                    </td>

                    <td class=" string ">

                        {% if product.image is not null and product.image.imageName is not null %}
                            <img src="{{ asset('uploads/images/' ~ product.image.imageName)}}">
                        {% endif %}

                    </td>

                    <td class=" string ">

                    {% if product.file is not null and product.file.fileName is not null %}
                        <a href="{{ asset('uploads/files/' ~ product.file.fileName)}}">Download</a>
                    {% endif %}

                    </td>



                    <td class="actions">

                        <a class="  action-show" title="" href="/admin/?entity=Users&amp;action=show&amp;menuIndex=3&amp;submenuIndex=-1&amp;sortField=id&amp;sortDirection=DESC&amp;page=1&amp;referer=%252Fadmin%252F%253Fentity%253DUsers%2526action%253Dlist%2526menuIndex%253D3%2526submenuIndex%253D-1%2526sortField%253Did%2526sortDirection%253DDESC%2526page%253D1&amp;id=10" target="_self">Show</a>


                        <a class="  action-edit" title="" href="/admin/?entity=Users&amp;action=edit&amp;menuIndex=3&amp;submenuIndex=-1&amp;sortField=id&amp;sortDirection=DESC&amp;page=1&amp;referer=%252Fadmin%252F%253Fentity%253DUsers%2526action%253Dlist%2526menuIndex%253D3%2526submenuIndex%253D-1%2526sortField%253Did%2526sortDirection%253DDESC%2526page%253D1&amp;id=10" target="_self">Edit</a>


                        <a class=" text-danger action-delete" title="" href="/admin/?entity=Users&amp;action=delete&amp;menuIndex=3&amp;submenuIndex=-1&amp;sortField=id&amp;sortDirection=DESC&amp;page=1&amp;referer=%252Fadmin%252F%253Fentity%253DUsers%2526action%253Dlist%2526menuIndex%253D3%2526submenuIndex%253D-1%2526sortField%253Did%2526sortDirection%253DDESC%2526page%253D1&amp;id=10" target="_self">Delete</a>


                    </td>
                </tr>
                {% endfor %}



                </tbody>
            </table>


            <form name="delete_form" method="post" action="/admin/?action=delete&amp;entity=Users&amp;id=__id__&amp;referer=%2Fadmin%2F%3Fentity%3DUsers%26action%3Dlist%26menuIndex%3D3%26submenuIndex%3D-1" id="delete-form" style="display: none"><input type="hidden" name="_method" value="DELETE"><div id="delete_form" style="display: none"><div><button type="submit" id="delete_form_submit" name="delete_form[submit]">Delete</button></div><input type="hidden" id="delete_form__easyadmin_delete_flag" name="delete_form[_easyadmin_delete_flag]" value="1"><input type="hidden" id="delete_form__token" name="delete_form[_token]" value="aaZg0Sl1Gq9j2FD4xDQRDRzl0Q1e1YNvNhq5V291MUQ"></div></form>

            <div id="modal-delete" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-body">
                            <h4>Do you really want to delete this item?</h4>
                            <p>There is no undo for this operation.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" data-dismiss="modal" class="btn btn-secondary">
                                <span class="btn-label">Cancel</span>
                            </button>

                            <button type="button" data-dismiss="modal" class="btn btn-danger" id="modal-delete-button" formtarget="_self">
                                <span class="btn-label">Delete</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

        </section>

        <section class="content-footer">


            <div class="list-pagination">
                <div class="list-pagination-counter">
                    <strong>11</strong> results
                </div>

                <nav class="pager list-pagination-paginator first-page last-page">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <a class="page-link" href="#">
                                <i class="fa fa-angle-left mx-1"></i> <span class="btn-label">Previous</span>
                            </a>
                        </li>

                        <li class="page-item disabled">
                            <a class="page-link" href="#">
                                <span class="btn-label">Next</span> <i class="fa fa-angle-right mx-1"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

        </section>

    </div>
{% endblock %}